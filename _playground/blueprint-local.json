{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/post-new.php",
	"login": true,
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "pikari-gutenberg-query-filter - Local Development"
			}
		},
		{
			"step": "activatePlugin",
			"pluginPath": "pikari-gutenberg-query-filter/pikari-gutenberg-query-filter.php"
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfour"
			}
		}
	]
}
